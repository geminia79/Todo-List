<div class="form-container radius-box glassy-bg small-10 small-centered medium-8 large-6 columns">
  <h2 class="mbs">New Transaction</h2>
  <%= form_tag transactions_path(product_id: @product.id) do %>
    <p>Please enter your personal info:</p>
    <div class="form-group">
      <%= text_field_tag :first_name, "",placeholder: "First Name", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :last_name, "",placeholder: "Last Name", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :company, "",placeholder: "Company", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= text_field_tag :phone, "",placeholder: "Phone", class: "form-control" %>
    </div>

    <p>Please enter your payment details:</p>
    <div id="dropin"></div>
    <%= submit_tag "Pay #{@product.price}$", class: "btn btn-primary" %>
  <%end%>
</div>

