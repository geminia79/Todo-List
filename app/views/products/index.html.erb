<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= search_form_for @search do |search_form| %>
  <%= search_form.label :name_cont %>
  <%= search_form.search_field :name_cont %>

  <%= search_form.label :user_name_cont %>
  <%= search_form.search_field :user_name_cont %>

  <%= search_form.label :price_gteq %>
  <%= search_form.search_field :price_gteq %>
  
  <%= search_form.label :price_lteq %>
  <%= search_form.search_field :price_lteq %>

  <%= search_form.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <%= content_tag :th, sort_link(@search, :name) %>
      <%= content_tag :th, sort_link(@search, :price) %>
      <%= content_tag :th, sort_link(@search, :user_name, "User Name") %>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to product.user.try(:name), user_path(product.user.try(:id)) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
