<div class="row">
  <div class="col-lg-12">
    <h3>Latest Products</h3>
  </div>

  <%= render "shared/search_product_form" %>

</div>

<div class="row text-center">
  <% @products.each do |product| %>
    <div class="col-sm-3 col-lg-3 col-md-3">
      <div class="thumbnail">
        <%= image_tag product.product_image(:medium) %>
        <div class="caption">
          <h4 class="pull-right">$<%= product.price %></h4>
          <h4 class="pull-left">
            <%= link_to product.name.capitalize, product %>
          </h4>
        </div>
        <div>
          <%= link_to("Buy", new_transaction_path(product_id: product.id), class: "btn btn-primary", style: "width: 100%; border-radius: 0; background-color: #f44336; border-color: #f44336;") %>
        </div>
      </div>
    </div>
  <% end %>
</div>