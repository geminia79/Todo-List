<p id="notice"><%= notice %></p>

<h1>Admin Users</h1>

<%= search_form_for @search, url: admin_users_path do |search_form| %>
  <%= search_form.label :name_cont %>
  <%= search_form.search_field :name_cont %>

  <%= search_form.label :email_cont %>
  <%= search_form.search_field :email_cont %>

  <%= search_form.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <%= content_tag :th, sort_link(@search, :id, 'ID') %>
      <%= content_tag :th, sort_link(@search, :name, 'Name') %>
      <%= content_tag :th, sort_link(@search, :email, 'Email') %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name.capitalize %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', admin_user_path(user.id) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin User', new_admin_user_path %>
